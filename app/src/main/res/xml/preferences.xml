<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:key="pref_sortOrder"
        android:title="@string/pref_sort_order_title"
        android:summary="@string/pref_sort_by_popularity"
        android:entries="@array/pref_sort_order_entries"
        android:entryValues="@array/pref_sort_order_values"
        android:defaultValue="@string/pref_sort_by_popularity">
    </ListPreference>

    <SwitchPreference
        android:key="pref_showFavorite"
        android:title="@string/pref_show_favorites"
        android:summaryOn="@string/pref_show_favorites"
        android:summaryOff="@string/pref_show_regular"
        android:defaultValue="false"/>
</PreferenceScreen>